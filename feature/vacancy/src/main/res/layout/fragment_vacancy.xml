<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/md_theme_background">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_back_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewing"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@id/share_image_view"
                app:layout_constraintTop_toTopOf="@id/arrow_back_image_view"
                app:layout_constraintBottom_toBottomOf="@id/arrow_back_image_view"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/share_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@id/favorite_image_view"
                app:layout_constraintTop_toTopOf="@id/arrow_back_image_view"
                app:layout_constraintBottom_toBottomOf="@id/arrow_back_image_view"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favorite_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_border"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/arrow_back_image_view"
                app:layout_constraintBottom_toBottomOf="@id/arrow_back_image_view"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="UI/UX Designer"
                android:textSize="22sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrow_back_image_view"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/salary_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Уровень дохода не указан"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_text_view"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/experience_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Требуемый опыт: от 1 года до 3 лет"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/salary_text_view"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedules_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Полная занятость, полный день"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/experience_text_view"/>
            <FrameLayout
                android:id="@+id/people_responded_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/vacancy_card_background"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/people_watching_layout"
                app:layout_constraintTop_toBottomOf="@id/schedules_text_view">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/applied_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    tools:text="@string/people_have_already_responded"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:minLines="2"
                    android:maxLines="2"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_profile"
                    android:tint="@color/md_theme_onSurface"
                    android:layout_gravity="end"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/md_theme_tertiary"
                    android:padding="2dp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/people_watching_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/vacancy_card_background"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toEndOf="@id/people_responded_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/schedules_text_view">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/looking_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    tools:text="2 человека сейчас смотрят"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:minLines="2"
                    android:maxLines="2"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_viewing"
                    android:tint="@color/md_theme_onSurface"
                    android:layout_gravity="end"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/md_theme_tertiary"
                    android:padding="2dp"/>
            </FrameLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/maps_image_view"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_responded_layout">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_maps"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="MOBYRIX - динамично развивающаяся продуктовая IT-компания, специализирующаяся на разработке мобильных приложений для iOS и Android."
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_regular"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/maps_image_view"
                tools:targetApi="o"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tasks_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasks"
                android:textSize="20sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_text_view"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/responsibilities_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Проектировать пользовательский опыт, проводить UX исследования."
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_regular"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tasks_text_view"
                tools:targetApi="o"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ask_employer_question_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ask_employer_question"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/responsibilities_text_view"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/receive_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/he_will_receive"
                android:textSize="14sp"
                android:textColor="@color/md_theme_outline"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ask_employer_question_text_view"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/questions_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_questions"
                tools:itemCount="3"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/receive_text_view"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/respond_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/respond"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/md_theme_tertiary"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/questions_recycler_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        android:id="@+id/reaction_include"
        layout="@layout/reaction_bottom_sheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>